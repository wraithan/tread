{
  "name": "tread",
  "version": "1.0.0",
  "description": "Test runner that attempts to stay out of the way.",
  "main": "index.js",
  "bin": {
    "tread": "index.js"
  },
  "scripts": {
    "test": "npm run test-lint && npm run test-unit && npm run test-integration && npm run test-smoke",
    "test-lint": "eslint .",
    "test-unit": "node test/unit/index.js",
    "test-integration": "node test/integration/index.js",
    "test-smoke": "node ./index.js ./test -p *.test.js -j 4"
  },
  "keywords": [
    "test",
    "runner"
  ],
  "author": "Wraithan",
  "license": "ISC",
  "dependencies": {
    "glob": "^5.0.5",
    "yargs": "^3.15.0"
  },
  "devDependencies": {
    "async": "^1.4.0",
    "chai": "^3.1.0",
    "eslint": "^0.24.1"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wraithan/tread.git"
  },
  "bugs": {
    "url": "https://github.com/wraithan/tread/issues"
  },
  "homepage": "https://github.com/wraithan/tread#readme"
}
